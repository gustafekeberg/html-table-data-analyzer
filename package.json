{
	"name": "npm-build",
	"config": {},
	"version": "0.0.1",
	"scripts": {
		"build:ts": "tsc --outDir dist/js src/ts/*",
		"copy:html": "cp src/*.html dist",
		"watch:ts": "onchange 'src/ts/*.ts' -- npm run build:ts",
		"watch:html": "onchange 'src/*.html' -- npm run copy:html",
		"watch:all": "parallelshell 'npm run watch:ts' 'npm run watch:html' 'npm run livereload'",
		"livereload": "livereload -p 9001 dist/"
	},
	"devDependencies": {
		"onchange": "^3.2.1",
		"typescript": "^2.5.3",
    "parallelshell": "^2.0.0",
    "livereload": "latest"
	}
}
